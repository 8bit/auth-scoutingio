<!DOCTYPE html>
<html>
<head>
  <title>BSA Passport by Scouting.io</title>
  <%= stylesheet_link_tag    "http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css" %>
  <%= stylesheet_link_tag    "doorkeeper/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="main" class="container">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <span class="brand">
            BSA Passport
          </span>
        </div>
      </div>
    </div>
    <div class="content">
      <div class="row">
        <% flash.each do |key, message| %>
          <div class="span16">
            <div class="alert-message <%= key %>" data-alert><a class="close" href="#">Ã—</a><p><%= message %></p></div>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </section>
</body>
</html>